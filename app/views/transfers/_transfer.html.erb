<%= tag.div id: dom_id(transfer), class: "card mb-3" do %>
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-3 text-start">
        <div class="d-flex align-items-center mb-1">
          <span class="text-muted small me-2">EAD ID</span>
          <span class="badge <%= transfer_action_badge_class(transfer) %>">
            <%= transfer.action.capitalize %>
          </span>
          <span class="text-muted small ms-2"></span>
          <span class="badge <%= transfer_status_badge_class(transfer) %>">
            <%= transfer.status.capitalize %>
          </span>
        </div>
        <span class="text-monospace fw-medium"><%= transfer.record.ead_identifier || "No EAD ID" %></span>
      </div>

      <div class="col-md-2 text-start">
        <span class="text-muted small d-block mb-1">Last Updated</span>
        <span class="fw-medium"><%= transfer.updated_at.strftime("%b %d, %Y %H:%M") %></span>
      </div>

      <div class="col-md-3 text-start">
        <span class="text-muted small d-block mb-1">Collection</span>
        <span class="fw-medium"><%= link_to transfer.record.collection.name, transfer.record.collection %></span>
      </div>

      <div class="col-md-3 text-start">
        <div class="d-flex align-items-center mb-1">
          <span class="text-muted small me-2">Destination</span>
          <span class="badge bg-info text-light">
            <%= transfer.destination.class.display_name %>
          </span>
        </div>
        <span class="fw-medium"><%= link_to transfer.destination.name, destination_path(transfer.destination) %></span>
      </div>

      <div class="col-md-1 text-end d-flex justify-content-end align-items-center">
        <div class="btn-group" role="group" aria-label="Record actions">
          <%= link_to record_path(transfer.record), class: "btn btn-outline-primary btn-sm", title: "View collection details" do %>
            <i class="bi bi-eye"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
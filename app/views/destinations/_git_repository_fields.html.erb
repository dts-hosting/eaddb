<div class="mb-3">
  <%= form.label :url, class: "form-label" %>
  <%= form.url_field :url, class: "form-control", required: true %>
  <div class="form-text">The Git Repository URL where records will be sent.</div>
</div>

<div class="mb-3">
  <%= form.label :token, class: "form-label" %>
  <%= form.password_field :password,
                          required: form.object.new_record?,
                          placeholder: "Personal access token (PAT)",
                          maxlength: 72,
                          class: "form-control" %>
</div>

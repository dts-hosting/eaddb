<div class="container py-4">
  <div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
      <div class="mb-4">
        <h2 class="fw-bold mb-0">New Destination</h2>
        <p class="text-muted small">Add a new <%= @destination.class.display_name %> destination to <%= @collection.name %></p>
      </div>

      <div class="card">
        <div class="card-body">
          <%= render 'form', collection: @collection, destination: @destination %>
        </div>
      </div>
    </div>
  </div>
</div>
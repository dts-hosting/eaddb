<div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4 mt-3">
  <div>
    <h2 class="fw-bold mb-0">Destinations</h2>
    <p class="text-muted small">Manage data export destinations</p>
  </div>
  <div class="btn-group">
  </div>
</div>

<%= render partial: "shared/search_form", locals: {
  url: destinations_path,
  placeholder: "Search by name..."
} %>

<%= render partial: "shared/infinite_scroll", locals: {
  container_id: "destinations",
  frame_id: :destinations_page,
  pagy: @pagy,
  collection: @destinations,
  item_partial: "destinations/destination",
  empty_message: "No destinations found.",
  pagination_url: destinations_path(page: @pagy.next, query: params[:query])
} %>

<%= tag.div id: dom_id(destination), class: "card mb-3" do %>
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-3 text-start">
        <div class="d-flex align-items-center mb-1">
          <span class="text-muted small me-2">Destination</span>
          <span class="badge bg-info text-light me-1"><%= destination.class.display_name %></span>
          <span class="badge <%= record_status_badge_class(destination.status) %> text-light">
            <%= destination.status %>
          </span>
        </div>
        <span class="fw-medium"><%= destination.name %></span>
      </div>

      <div class="col-md-3 text-start">
        <span class="text-muted small d-block mb-1">Source</span>
        <span class="fw-medium"><%= link_to destination.collection.source.name, source_path(destination.collection.source) %></span>
      </div>

      <div class="col-md-3 text-start">
        <span class="text-muted small d-block mb-1">Collection</span>
        <span class="fw-medium"><%= link_to destination.collection.name, destination.collection %></span>
      </div>

      <div class="col-md-2 text-start">
        <span class="text-muted small d-block mb-1">Last Updated</span>
        <span class="fw-medium"><%= destination.updated_at.strftime("%B %d, %Y at %H:%M") %></span>
      </div>

      <div class="col-md-1 text-end d-flex justify-content-end align-items-center">
        <div class="btn-group" role="group" aria-label="Destination actions">
          <%= link_to edit_destination_path(destination), class: "btn btn-outline-success btn-sm border-end-0", title: "Edit destination" do %>
            <i class="bi bi-pencil"></i>
            <% end %>
          <%= link_to destination_path(destination), class: "btn btn-outline-primary btn-sm", title: "View destination details" do %>
            <i class="bi bi-eye"></i>
            <% end %>
          <%= link_to destination_path(destination), class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this destination?" }, title: "Delete destination" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
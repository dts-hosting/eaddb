<header class="border-bottom">
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <span class="navbar-brand border-end pe-3">
        EadDB
      </span>

      <% if authenticated? %>
        <div class="d-flex align-items-center me-auto">
          <ul class="navbar-nav flex-row me-auto">
            <li class="nav-item me-3">
              <%= link_to root_path, class: "nav-link" do %>
                <i class="bi bi-house-door"></i> Home
              <% end %>
            </li>
            <li class="nav-item me-3">
              <%= link_to sources_path, class: "nav-link" do %>
                <i class="bi bi-database"></i> Sources
              <% end %>
            </li>
            <li class="nav-item me-3">
              <%= link_to destinations_path, class: "nav-link" do %>
                <i class="bi bi-folder"></i> Destinations
              <% end %>
            </li>
            <li class="nav-item me-3">
              <%= link_to records_path, class: "nav-link" do %>
                <i class="bi bi-collection"></i> Records
              <% end %>
            </li>
            <li class="nav-item me-3">
              <%= link_to transfers_path, class: "nav-link" do %>
                <i class="bi bi-send"></i> Transfers
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>

      <div class="d-flex">
        <% if authenticated? %>
          <%= button_to "Sign Out", session_path, method: :delete, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>

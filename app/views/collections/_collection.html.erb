<%= tag.div id: dom_id(collection), class: "card mb-3" do %>
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-3 text-start">
        <div class="d-flex align-items-center mb-1">
          <span class="text-muted small me-2">Collection</span>
        </div>
        <span class="fw-medium"><%= collection.name %></span>
      </div>

      <div class="col-md-3 text-center">
        <span class="text-muted small d-block mb-1">Records</span>
        <span class="fw-medium"><%= number_with_delimiter(collection.records_count || 0) %></span>
      </div>

      <div class="col-md-3 text-center">
        <span class="text-muted small d-block mb-1">Destinations</span>
        <span class="fw-medium"><%= number_with_delimiter(collection.destinations.count) %></span>
      </div>

      <div class="col-md-3 text-end d-flex justify-content-between align-items-center">
        <div>
          <span class="text-muted small d-block mb-1">Date Added</span>
          <span class="fw-medium"><%= time_ago_in_words(collection.created_at) %> ago</span>
        </div>

        <div class="btn-group" role="group" aria-label="Collection actions">
          <%= link_to edit_collection_path(collection), class: "btn btn-outline-success btn-sm border-end-0", title: "Edit collection" do %>
            <i class="bi bi-pencil"></i>
            <% end %><%= link_to collection_path(collection), class: "btn btn-outline-primary btn-sm", title: "View collection details" do %>
            <i class="bi bi-eye"></i>
            <% end %><%= link_to collection_path(collection), class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this collection?" }, title: "Delete collection" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>